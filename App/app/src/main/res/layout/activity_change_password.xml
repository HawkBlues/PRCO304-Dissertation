<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ChangePasswordActivity">

    <TextView
            android:text="New Password:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ChangePasswordActivity_TextView_NewPasswordLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="124dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="New Password Again:"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/ChangePasswordActivity_TextView_NewPasswordLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:id="@+id/ChangePasswordActivity_TextView_NewPasswordAgainLabel"/>
    <EditText
            android:inputType="textPassword"
            android:layout_width="170dp"
            android:layout_height="38dp"
            android:id="@+id/ChangePasswordActivity_TextView_NewPassword"
            app:layout_constraintStart_toEndOf="@+id/ChangePasswordActivity_TextView_NewPasswordLabel"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/ChangePasswordActivity_TextView_NewPasswordLabel"
            android:hint="New Password"
            app:layout_constraintEnd_toEndOf="@+id/ChangePasswordActivity_TextView_NewPasswordAgain"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ChangePasswordActivity_TextView_NewPasswordAgain"
            app:layout_constraintStart_toEndOf="@+id/ChangePasswordActivity_TextView_NewPasswordAgainLabel"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/ChangePasswordActivity_TextView_NewPasswordAgainLabel"
            android:hint="New Password Again"
    />
    <Button
            android:text="Save Change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ChangePasswordActivity_Button"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/ChangePasswordActivity_TextView_NewPasswordAgain"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>