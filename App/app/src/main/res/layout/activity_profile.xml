<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ProfileActivity">
    <TextView
            android:text="Loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ProfileActivity_TextView_UserEmail"
            app:layout_constraintStart_toEndOf="@+id/ProfileActivity_TextView_EmailText"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/ProfileActivity_TextView_EmailText"/>
    <TextView
            android:text="Username: Loading"
            android:layout_width="70dp"
            android:layout_height="43dp"
            android:id="@+id/profile_userUsername"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textStyle="bold" android:textSize="24sp"/>
    <TextView
            android:text="Email:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ProfileActivity_TextView_EmailText" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/profile_userUsername"/>
    <Button
            android:text="Sign Out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ProfileActivity_SignOut_Button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Join Date:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ProfileActivity_TextView_JoinDateLabel"
            app:layout_constraintStart_toStartOf="@+id/ProfileActivity_TextView_EmailText"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/ProfileActivity_TextView_EmailText"/>
    <TextView
            android:text="Loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profileActivity_TextView_JoinDate" app:layout_constraintStart_toEndOf="@+id/ProfileActivity_TextView_JoinDateLabel"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/ProfileActivity_TextView_JoinDateLabel"/>
    <Button
            android:text="Change Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ProfileActivity_ChangePassword_Button"
            app:layout_constraintStart_toStartOf="@+id/ProfileActivity_TextView_JoinDateLabel"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/ProfileActivity_TextView_JoinDateLabel"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="466dp" tools:layout_editor_absoluteY="201dp" tools:layout_editor_absoluteX="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

